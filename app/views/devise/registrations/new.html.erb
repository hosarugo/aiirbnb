<div class="row">
  <div class="col-md-5 col-md-offset-3 text-center"> 

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
 
    <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet ( PrÃ©nom + Nom)" %>
 
  </div>

  <div class="form-group">


    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Votre email" %>
  </div>

  <div class="form-group">

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Choisissez un mot de passe" %>
  </div>

  <div class="form-group">

    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Retapez votre mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary"  %>
  </div>
<% end %>

</div>
</div>
